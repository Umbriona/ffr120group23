function displacementVec = ToroidalDistance (displacementVec, fieldSize)
% Assumed square Range

displacementX = displacementVec(:,:,1);
tempLogic = displacementX > abs(0.5*fieldSize);
displacementVec(:,:,1) = displacementX - fieldSize * tempLogic - displacementX;   

displacementY = displacementVec(:,:,2);
tempLogic = displacementY > abs(0.5*fieldSize); 
displacementVec(:,:,2) = fieldSize * tempLogic - displacementY; 
end